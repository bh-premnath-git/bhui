{
    "documentationUrl": "N/A",
    "connectionSpecification": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MySQL Source Spec",
      "type": "object",
      "required": [
        "password",
        "db_schema",
        "host",
        "port",
        "database",
        "username"
      ],
      "properties": {
        "host": {
          "title": "Host",
          "description": "Hostname of the database.",
          "type": "string",
          "order": 0
        },
        "port": {
          "title": "Port",
          "description": "Port of the database.",
          "type": "string",
          "minimum": 0,
          "maximum": 65536,
          "examples": ["3307"],
          "order": 1
        },
        "database": {
          "title": "Database Name",
          "description": "Name of the database.",
          "type": "string",
          "order": 2
        },
        "username": {
          "title": "Username",
          "description": "Username to access the database.",
          "type": "string",
          "order": 3
        },
        "password": {
          "title": "Password",
          "description": "Password associated with the username.",
          "type": "string",
          "bh_secret": true,
          "order": 4
        },
        "db_schema": {
          "title": "Schema",
          "description": "Database schema name.",
          "type": "string",
          "order": 5
        }
      }
    }
  } 